temp = float(input("Enter temperature: "))
unit = input("Enter unit (C for Celsius, F for Fahrenheit): ").upper()
if unit == 'C':
    f = (temp * 9/5) + 32
    print(f"{temp}째C = {f}째F")
elif unit == 'F':
    c = (temp - 32) * 5/9
    print(f"{temp}째F = {c}째C")
else:
    print("Invalid unit entered.")
